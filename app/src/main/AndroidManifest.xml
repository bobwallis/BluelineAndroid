<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="uk.me.rsw.bl" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Blueline"
        android:name="uk.me.rsw.bl.Blueline">
        <activity
            android:name="uk.me.rsw.bl.activities.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="uk.me.rsw.bl.activities.MethodActivity"
            android:label="@string/title_activity_method"
            android:parentActivityName="uk.me.rsw.bl.activities.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="uk.me.rsw.bl.activities.MainActivity" />
        </activity>
        <activity
            android:name="uk.me.rsw.bl.activities.AboutActivity"
            android:label="@string/title_activity_about"
            android:parentActivityName="uk.me.rsw.bl.activities.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="uk.me.rsw.bl.activities.MainActivity" />
        </activity>
        <activity
            android:name="uk.me.rsw.bl.activities.SettingsActivity"
            android:label="@string/title_activity_settings"
            android:parentActivityName="uk.me.rsw.bl.activities.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="uk.me.rsw.bl.activities.MainActivity" />
        </activity>
    </application>

</manifest>
