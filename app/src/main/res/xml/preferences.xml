<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory
        android:title="@string/pref_header_general"
        android:key="pref_general_settings">

        <ListPreference
            android:title="@string/pref_title_workingBell"
            android:summary="@string/pref_summary_workingBell"
            android:key="workingBell"
            android:defaultValue="@string/default_workingBell"
            android:entries="@array/pref_option_workingBell"
            android:entryValues="@array/pref_option_workingBell_values" />

    </PreferenceCategory>

    <PreferenceCategory
        android:title="@string/pref_header_numbers"
        android:key="pref_numbers_settings">

        <SwitchPreferenceCompat
            android:key="numbers_show"
            android:title="@string/pref_title_showNumbers"
            android:defaultValue="@string/default_numbers_show" />

        <ListPreference
            android:title="@string/pref_title_numbersLayout"
            android:summary="@string/pref_summary_layout"
            android:key="numbers_layout"
            android:defaultValue="@string/default_numbers_layout"
            android:entries="@array/pref_option_layout"
            android:entryValues="@array/pref_option_layout_values"
            android:dependency="numbers_show" />

        <ListPreference
            android:title="@string/pref_title_numbersSize"
            android:summary="@string/pref_summary_size"
            android:key="numbers_size"
            android:defaultValue="@string/default_numbers_size"
            android:entries="@array/pref_option_size"
            android:entryValues="@array/pref_option_size_values"
            android:dependency="numbers_show" />

    </PreferenceCategory>

    <PreferenceCategory
        android:title="@string/pref_header_lines"
        android:key="pref_lines_settings">

        <SwitchPreferenceCompat
            android:key="lines_show"
            android:title="@string/pref_title_showLines"
            android:defaultValue="@string/default_lines_show" />

        <ListPreference
            android:title="@string/pref_title_linesLayout"
            android:summary="@string/pref_summary_layout"
            android:key="lines_layout"
            android:defaultValue="@string/default_lines_layout"
            android:entries="@array/pref_option_layout"
            android:entryValues="@array/pref_option_layout_values"
            android:dependency="lines_show" />

        <ListPreference
            android:title="@string/pref_title_linesSize"
            android:summary="@string/pref_summary_size"
            android:key="lines_size"
            android:defaultValue="@string/default_lines_size"
            android:entries="@array/pref_option_size"
            android:entryValues="@array/pref_option_size_values"
            android:dependency="lines_show" />

    </PreferenceCategory>

    <PreferenceCategory
        android:title="@string/pref_header_grid"
        android:key="pref_grid_settings">

        <SwitchPreferenceCompat
            android:key="grid_show"
            android:title="@string/pref_title_showGrid"
            android:defaultValue="@string/default_grid_show" />

        <ListPreference
            android:title="@string/pref_title_gridLayout"
            android:summary="@string/pref_summary_layout"
            android:key="grid_layout"
            android:defaultValue="@string/default_grid_layout"
            android:entries="@array/pref_option_layout"
            android:entryValues="@array/pref_option_layout_values"
            android:dependency="grid_show" />

        <ListPreference
            android:title="@string/pref_title_gridSize"
            android:summary="@string/pref_summary_size"
            android:key="grid_size"
            android:defaultValue="@string/default_grid_size"
            android:entries="@array/pref_option_size"
            android:entryValues="@array/pref_option_size_values"
            android:dependency="grid_show" />

    </PreferenceCategory>

    <PreferenceCategory
        android:title="@string/pref_header_practice"
        android:key="pref_practice_settings">

        <SwitchPreferenceCompat
            android:key="practice_show"
            android:title="@string/pref_title_showPractice"
            android:defaultValue="@string/default_practice_show" />

        <SwitchPreferenceCompat
            android:key="practice_vibrate"
            android:title="@string/pref_title_vibrate"
            android:defaultValue="@string/default_practice_vibrate"
            android:dependency="practice_show"/>

    </PreferenceCategory>

</PreferenceScreen>