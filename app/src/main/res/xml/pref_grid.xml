<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <CheckBoxPreference
        android:key="grid_show"
        android:title="@string/pref_title_showGrid"
        android:defaultValue="true" />

    <ListPreference
        android:title="@string/pref_title_gridLayout"
        android:summary="Select the layout for this line view"
        android:key="grid_layout"
        android:defaultValue="oneColumn"
        android:entries="@array/pref_option_layout"
        android:entryValues="@array/pref_option_layout_values"
        android:dependency="grid_show" />

    <ListPreference
        android:title="@string/pref_title_gridSize"
        android:summary="Select the size for this line view"
        android:key="grid_size"
        android:defaultValue="medium"
        android:entries="@array/pref_option_size"
        android:entryValues="@array/pref_option_size_values"
        android:dependency="grid_show" />

</PreferenceScreen>
